{
  "operation": "payment-sync",
  "description": "Validation rules for payment sync operations",

  "required_fields": [
    "transactionId.id",
    "status"
  ],

  "field_validations": [
    {
      "field": "transactionId.id",
      "rules": ["not_empty"],
      "error_message": "Transaction ID must be present"
    },
    {
      "field": "status",
      "rules": ["not_empty"],
      "error_message": "Status must be present"
    }
  ],

  "grpc_status_codes": {
    "success": ["OK"],
    "allowed": ["OK", "NOT_FOUND"]
  }
}
