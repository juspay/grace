# AI Configuration
AI_PROVIDER=litellm
LITELLM_API_KEY=your_api_key_here
LITELLM_BASE_URL=http://localhost:4000/v1
LITELLM_MODEL_ID=gpt-4

# Custom Instructions
# Path to a text file containing custom instructions for the AI
# These instructions will be prepended to all AI prompts
CUSTOM_INSTRUCTIONS_FILE=./custom_instructions.txt

# Vertex AI Configuration (optional)
VERTEX_AI_PROJECT_ID=your_project_id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Research Configuration
MAX_DEPTH=5
MAX_PAGES_PER_DEPTH=10
MAX_TOTAL_PAGES=50
CONCURRENT_PAGES=3
LINK_RELEVANCE_THRESHOLD=0.6
TIMEOUT_PER_PAGE_MS=30000
RESPECT_ROBOTS_TXT=true

# Research Mode Configuration
INTERACTIVE_MODE=true
# Set to false for direct research mode (no UI, immediate processing)
# When false: query -> search -> crawl pages -> follow links -> deep analysis -> output

# Deep Link Analysis Configuration
ENABLE_DEEP_LINK_CRAWLING=true
# Follow links within scraped pages for deeper analysis
MAX_LINKS_PER_PAGE=10
# Maximum links to follow from each page
DEEP_CRAWL_DEPTH=2
# How many levels deep to follow links within pages

# Data Storage
RESEARCH_DATA_DIR=./research_data
HISTORY_FILE=./research_history.json

# SearXNG Configuration
SEARXNG_BASE_URL=http://localhost:8080

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT_MS=30000

# Proxy Configuration (optional, comma-separated list)
# PROXY_LIST=http://proxy1:port,http://proxy2:port,socks5://proxy3:port

# Debug Configuration
IS_DEBUG=false
DEBUG_LOG_FILE=./search_query_time.log
RESULT_OUTPUT_DIR=./cli/result