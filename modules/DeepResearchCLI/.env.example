# LiteLLM Configuration (if AI_PROVIDER=litellm)
LITELLM_API_KEY=
LITELLM_BASE_URL=https://grid.ai.juspay.net
LITELLM_MODEL_ID=qwen3-coder-480b

# Vertex AI Configuration (if AI_PROVIDER=vertex)
